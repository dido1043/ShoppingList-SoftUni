@{
    ViewBag.Title = "Products";
}

<h2>Products to buy.</h2>
<a asp-controller="Product" asp-action="Add" class="btn btn-primary">Add Product</a>
@foreach(var product in Model)
{
    <div class="col-sm-6">
        <div class="card ">
            <div class="card-body">
                <p class="card-text">@product.Name</p>
                <div class="d-grid gap-2">
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning">Edit</a>
                    <form class="mt-2" asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id">
                        <div class="d-grid gap-2">
                            <input type="submit" value="Delete" class="btn btn-danger mb-2" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
